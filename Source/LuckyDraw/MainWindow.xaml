                    <Grid.Background>
                        <ImageBrush ImageSource="pack://application:,,,/Image/person.png"/>
                    </Grid.Background>
                    <TextBlock VerticalAlignment="Center" 
                               HorizontalAlignment="Center"
                               Text="{Binding Name}"
                               Background="Transparent"
                               FontSize="14"/>
                </Grid>
            </DataTemplate>

        </Grid.Resources>

