                        <ImageBrush ImageSource="pack://application:,,,/Image/prize.png"/>
                    </Grid.Background>
                    <TextBlock VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Margin="0 30 0 0"
                               Text="{Binding Name}"
                               Background="White"
                               FontSize="14"/>
                </Grid>
            </DataTemplate>

            <DataTemplate x:Key="personTemplate">
